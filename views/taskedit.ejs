<!Doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/static/style.css">
    <title>Todo</title>
    <style>

    </style>
</head>

<body>
    <div class="container background m-5">


        <h2>Edit Task</h2>
        <div class="todo">


            <ul class="list-group">
                <% Tasks.forEach(details=> { %>
                    <% if (details._id==idTask) { %>
                        <li class="list-group-item">
                            <form action="/task/edit/<%= details._id %>" method="POST">
                                <input type="text" style="width: 80%;" value="<%= details.content %>" name="content">
                                <input type="checkbox" style="width: 80%;" value="<%= details.iscomplete %>"
                                    name="comp">

                                <button type="submit" class="btn btn-success">Confirm</button>
                                <a type="button" href="/" type="submit" class="btn btn-secondary">Cancel</a>

                            </form>
                        </li>
                        <% } else { %>

                            <% } %>
                                <% }) %>
            </ul>
            <footer class="mt-auto text-white-50">
                <p> Full Stack Project for <a href="https://stige.tech/" class="text-white">StigeTask</a>, by <a
                        href="https://kgaurav123-68b49.web.app/" class="text-white">Kumar Gourav</a>.</p>
            </footer>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
            crossorigin="anonymous"></script>


</body>

</html>