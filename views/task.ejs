<body class="d-flex h-100 text-center text-white bg-dark">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>

                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link" aria-current="page" href="/">Home</a>
                    <a class="nav-link" href="/userprofile">Profile</a>
                    <a class="nav-link active" href="/task">Add Task</a>
                    <a class="nav-link" href="/course">Your Course</a>
                    <a class="nav-link" href="/logout">Logout</a>

                </nav>
            </div>
        </header>

        <main class="px-3">
            <form action="/task" method="POST">
                <div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Enter String</label>
                        <input type="text" name="content" class="form-control" id="exampleInputEmail1"
                            aria-describedby="emailHelp">
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1" name="comp">
                        <label class="form-check-label" for="exampleCheck1">Mark as completed</label>
                    </div>

                    <button type="submit" class="btn btn-primary mt-4 p-2">Add Task</button>
                </div>
            </form>

            <div class="container background mt-3">

                <ul class="list-group mt-3">
                    <% Tasks.forEach(details=> { %>
                        <li class="list-group-item">
                            <span class="item-name">
                                <%= details.content %>
                            </span>
                            <span class="item-name">
                                <%= details.iscomplete %>
                            </span>
                            <a href="task/edit/<%= details._id %>" type="button" class="btn btn-info btn1">
                                Edit
                            </a>
                            <a href="/task/remove/<%= details._id %>" type="button" class="btn btn-danger btn1">
                                Delete
                            </a>
                        </li>
                        <% }) %>
                </ul>
            </div>


        </main>

        <footer class="mt-auto text-white-50">
            <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by <a
                    href="https://twitter.com/mdo" class="text-white">@mdo</a>.</p>
        </footer>
    </div>



